p
  strong Pessoa: 
  = @passeio.pessoa.nome
p
  strong Cachorros: 
  = confere_cachorros(@passeio.cachorro_1, @passeio.cachorro_2, @passeio.cachorro_3)
p
  strong Status: 
  = @passeio.status
p
  strong Data e hora: 
  = @passeio.data_e_hora.strftime("%d-%m-%Y %H:%M")

.ui.buttons
  = link_to 'Voltar', passeios_path, class: 'ui button'
  - if current_user == @passeio.pessoa || administrador?
    => link_to 'Editar', edit_passeio_path(@passeio), class: 'ui primary button'